                    aria-controls="navbarNav" aria-expanded="false" aria-label="Menú">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Opciones">Panel Admin</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm ms-2">Cerrar Sesión</button>
                            </form>
                        </li>
                    }
                    <li class="nav-item ms-3">
                        <a class="btn btn-outline-light position-relative" asp-controller="Carrito" asp-action="Index">
                            <i class="fas fa-shopping-cart"></i>
                            @if (carritoCantidad > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @carritoCantidad
                                </span>
                            }
                        </a>
                        @{
                            var estadoInfo = ObtenerEstadoRestaurante();
                        }
                    <li class="nav-item ms-2 d-flex align-items-center">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#horariosModal" class="text-decoration-none clickable-badge">
