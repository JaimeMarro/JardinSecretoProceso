@model JardinSecretoPrueba1.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-trash me-2"></i>Eliminar Producto</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver a Productos
            </a>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fa-solid fa-triangle-exclamation me-2"></i>
                ¿Estás seguro de que deseas eliminar este producto?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">@Model.Precio.ToString("C")</dd>

                <dt class="col-sm-3">Disponible</dt>
                <dd class="col-sm-9">@Html.DisplayFor(modelItem => Model.Disponible)</dd>

                <dt class="col-sm-3">Imagen</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                    {
                        <img src="@Model.ImagenUrl" alt="Imagen del producto" style="width:100px;" />
                    }
                    else
                    {
                        <span class="text-muted">No hay imagen</span>
                    }
                </dd>

                <dt class="col-sm-3">Categoría</dt>
                <dd class="col-sm-9">@Model.Categoria?.Nombre</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="ProductoId" />
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="fa-solid fa-trash me-1"></i> Eliminar
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Cancelar
            </a>
        </div>
    </div>
</div>
