@model JardinSecretoPrueba1.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">
        <div class="admin-panel-header">
            <h2><i class="fas fa-exclamation-triangle me-3 text-danger"></i>Confirmar Eliminación</h2>
        </div>

        <h4 class="text-danger mt-4">¿Estás seguro de que quieres eliminar este producto?</h4>
        <p class="text-white-50">Esta acción no se puede deshacer.</p>

        <div class="row mt-4 p-3 bg-dark rounded">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">Nombre</dt>
                    <dd class="col-sm-9">@Model.Nombre</dd>
                    <dt class="col-sm-3">Categoría</dt>
                    <dd class="col-sm-9">@Model.Categoria.Nombre</dd>
                </dl>
            </div>
            <div class="col-md-4">
                <img src="@Model.ImagenUrl"
                     alt="@Model.Nombre"
                     class="rounded" style="width: 100%; height: 300px; object-fit: cover;" />
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductoId" />
            <div class="admin-footer">
                <a asp-action="Index" class="btn btn-outline-light me-2">Cancelar</a>
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> Sí, Eliminar</button>
            </div>
        </form>
    </div>
</div>