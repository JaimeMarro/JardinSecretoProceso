@{
    ViewData["Title"] = "Error al eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">

        <div class="admin-panel-header">
            <h2><i class="fas fa-exclamation-triangle me-3 text-danger"></i>Error al Eliminar</h2>
        </div>

        <div class="text-center p-4">
            <i class="fas fa-exclamation-triangle fa-5x text-danger mb-4 mt-3"></i>
            <h2 class="text-danger fw-bold">¡Error!</h2>
            <p class="fs-5 mt-3 text-white-50">
                No puedes eliminar este producto porque está siendo utilizado por uno o más elementos (sabores o extras).
            </p>
        </div>

        <div class="admin-footer">
            <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i>Regresar al menú de Productos
            </a>
        </div>
    </div>
</div>