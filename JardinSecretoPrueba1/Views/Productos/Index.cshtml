@model IEnumerable<JardinSecretoPrueba1.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">

        <div class="admin-panel-header">
            <h2><i class="fas fa-box-open me-3 text-brand-primary"></i>Gestión de Productos</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i> Nuevo Producto
            </a>
        </div>
        <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Categoría</th>
                    <th>Disponibilidad</th>
                    <th>Precio</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.ImagenUrl" alt="@item.Nombre" style="width: 70px; height: 70px; object-fit: cover; border-radius: 8px;" />
                        </td>
                        <td><strong>@Html.DisplayFor(modelItem => item.Nombre)</strong></td>
                        <td>@Html.DisplayFor(modelItem => item.Categoria.Nombre)</td>
                        <td>
                            @if (item.Disponible)
                            {
                                <span class="badge bg-success-soft">Disponible</span>
                            }
                            else
                            {
                                <span class="badge bg-danger-soft">No disponible</span>
                            }
                        </td>
                        <td>$@item.Precio.ToString("0.00")</td>
                        <td class="text-end action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn-edit" title="Editar">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn-details" title="Detalles">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn-delete" title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        <div class="admin-footer">
            <a asp-controller="Home" asp-action="Opciones" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i> Volver al Panel
            </a>
        </div>

    </div>
</div>