@model JardinSecretoPrueba1.Models.Producto

@{
    ViewData["Title"] = "Crear Nuevo Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">

        <div class="admin-panel-header">
            <h2><i class="fas fa-plus-circle me-3 text-brand-primary"></i>Nuevo Producto</h2>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i> Volver a la lista
            </a>
        </div>

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-4">
                    <label asp-for="Precio" class="form-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Disponible" class="form-label">Disponibilidad</label>

                <div class="form-check form-switch form-switch-lg">

                    <input asp-for="Disponible" type="checkbox" class="form-check-input" checked="checked" />

                    <label class="form-check-label" asp-for="Disponible" style="padding-top: 4px;">
                        ¿El producto está disponible para la venta?
                    </label>
                </div>
                <span asp-validation-for="Disponible" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <label asp-for="CategoriaId" class="form-label">Categoría</label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId">
                        <option value="">-- Selecciona una Categoría --</option>
                    </select>
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-label">Imagen del Producto</label>
                    <input type="file" name="imagen" class="form-control" />
                </div>
            </div>

            <div class="admin-footer">
                <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check me-2"></i> Guardar Producto
                </button>
            </div>
        </form>
    </div>
</div>