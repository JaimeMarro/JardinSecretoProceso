@model JardinSecretoPrueba1.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">

        <div class="admin-panel-header">
            <h2><i class="fas fa-info-circle me-3 text-brand-primary"></i>Detalles del Producto</h2>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i> Volver a Productos
            </a>
        </div>

        <div class="row mt-4">

            <div class="col-md-8">
                <dl class="dl-horizontal-admin">
                    <dt>Nombre</dt>
                    <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt>Descripción</dt>
                    <dd>@Html.DisplayFor(model => model.Descripcion)</dd>

                    <dt>Precio</dt>
                    <dd>@Model.Precio.ToString("C")</dd> <dt>Disponibilidad</dt>
                    <dd>
                        @if (Model.Disponible)
                        {
                            <span class="badge bg-success-soft">Disponible</span>
                        }
                        else
                        {
                            <span class="badge bg-danger-soft">No Disponible</span>
                        }
                    </dd>

                    <dt>Categoría</dt>
                    <dd>@(Model.Categoria?.Nombre)</dd>
                </dl>
            </div>

            <div class="col-md-4">
                <label class="form-label">Imagen</label>
                @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                {
                    <img src="@Model.ImagenUrl" class="img-fluid rounded" alt="@Model.Nombre" />
                }
                else
                {
                    <div class="img-fluid rounded d-flex align-items-center justify-content-center" 
                         style="height: 200px; background-color: #2a2a2a; border: 1px dashed #555;">
                        <span class="text-muted">No hay imagen</span>
                    </div>
                }
            </div>
        </div>

        <div class="admin-footer">
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i> Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-success">
                <i class="fas fa-pencil-alt me-2"></i> Editar
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <style>
        .dl-horizontal-admin dt {
            color: #8a92a6; /* Color gris para el título (Nombre, Precio, etc.) */
            font-weight: 500;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        .dl-horizontal-admin dd {
            color: #ffffff; /* Color blanco para el valor (Prueba, $0.50, etc.) */
            font-weight: 600;
            font-size: 1.1rem;
            margin-left: 0.5rem;
            margin-bottom: 1.5rem;
        }
    </style>
}