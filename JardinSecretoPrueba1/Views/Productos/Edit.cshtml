@model JardinSecretoPrueba1.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">
        <div class="admin-panel-header">
            <h2><i class="fas fa-pencil-alt me-3 text-brand-primary"></i>Editar Producto</h2>
            <a asp-action="Index" class="btn btn-outline-light"><i class="fas fa-arrow-left me-2"></i> Volver</a>
        </div>

        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductoId" />
            <div class="row mt-4">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-8 mb-4">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-4">
                            <label asp-for="Precio" class="form-label"></label>
                            <input asp-for="Precio" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Disponible" class="form-label">Disponibilidad</label>
                        <div class="form-check form-switch form-switch-lg">

                            <input asp-for="Disponible" type="checkbox" class="form-check-input" />

                            <label class="form-check-label" asp-for="Disponible" style="padding-top: 4px;">
                                ¿El producto está disponible para la venta?
                            </label>
                        </div>
                        <span asp-validation-for="Disponible" class="text-danger small"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="CategoriaId" class="form-label">Categoría</label>
                            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Cambiar Imagen</label>
                            <input type="file" name="imagenFile" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Imagen Actual</label>
                    <img src="@Model.ImagenUrl" class="img-fluid rounded" alt="Imagen actual" />
                </div>
            </div>

            <div class="admin-footer">
                <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i> Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>