@model JardinSecretoPrueba1.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>Editar Categoría</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver a la lista
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="CategoriaId" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese una descripción"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Guardar cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="fa-solid fa-xmark me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}