@model JardinSecretoPrueba1.Models.Categoria

@{
    ViewData["Title"] = "Detalles de la Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">

        <div class="admin-panel-header">
            <h2><i class="fas fa-info-circle me-3 text-brand-primary"></i>Detalles de la Categoría</h2>
        </div>

        <dl class="row mt-4">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
        </dl>

        <div class="admin-footer">
            <a asp-action="Index" class="btn btn-outline-light me-2">
                <i class="fas fa-arrow-left me-2"></i> Volver a la lista
            </a>
            <a asp-action="Edit" asp-route-id="@Model.CategoriaId" class="btn btn-primary">
                <i class="fas fa-pencil-alt me-2"></i> Editar
            </a>
        </div>

    </div>
</div>