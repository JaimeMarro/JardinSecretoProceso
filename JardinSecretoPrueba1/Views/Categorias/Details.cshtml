@model JardinSecretoPrueba1.Models.Categoria

@{
    ViewData["Title"] = "Detalles de Categoría";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i>Detalles de la Categoría</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver a la lista
            </a>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-semibold">Descripción</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
            </dl>

            <div class="text-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-primary text-white px-4">
                    <i class="fa-solid fa-pen-to-square me-1"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">
                    <i class="fa-solid fa-list me-1"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>

