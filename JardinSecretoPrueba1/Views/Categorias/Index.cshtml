@model IEnumerable<JardinSecretoPrueba1.Models.Categoria>

@{
    ViewData["Title"] = "Gestión de Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">

        <div class="admin-panel-header">
            <h2><i class="fas fa-tags me-3 text-brand-primary"></i>Gestión de Categorías</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i> Nueva Categoría
            </a>
        </div>
        <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@Html.DisplayFor(modelItem => item.Nombre)</strong></td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td class="text-end action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn-edit" title="Editar">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn-details" title="Detalles">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn-delete" title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        <div class="admin-footer">
            <a asp-controller="Home" asp-action="Opciones" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i> Volver al Panel
            </a>
        </div>

    </div>
</div>