@model IEnumerable<JardinSecretoPrueba1.Models.Categoria>

@{
    ViewData["Title"] = "Gestión de Categorías";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-seedling me-2"></i>Gestión de Categorías</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="fa-solid fa-plus me-1"></i> Nueva Categoría
            </a>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fa-solid fa-circle-info me-2"></i>No hay categorías registradas.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-success text-center">
                            <tr>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th style="width: 150px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>@item.Descripcion</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-outline-primary btn-sm" title="Editar"><i class="fa-solid fa-pen"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-outline-info btn-sm" title="Detalles"><i class="fa-solid fa-eye"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-outline-danger btn-sm" title="Eliminar"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <div class="card-footer text-end">
            <a asp-controller="Home" asp-action="Opciones" class="btn btn-secondary btn-sm"><i class="fa-solid fa-arrow-left me-1"></i> Volver al Panel</a>
        </div>
    </div>
</div>