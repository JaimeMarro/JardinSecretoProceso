@model JardinSecretoPrueba1.Models.Extra

@{
    ViewData["Title"] = "Crear Extra";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-plus me-2"></i>Crear Nuevo Extra</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver a Extras
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="IdProducto" class="form-label">Producto</label>
                    <select asp-for="IdProducto" class="form-select" asp-items="ViewBag.IdProducto"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PrecioExtra" class="form-label">Precio</label>
                    <input asp-for="PrecioExtra" class="form-control" />
                    <span asp-validation-for="PrecioExtra" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-plus me-1"></i> Crear
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fa-solid fa-arrow-left me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}