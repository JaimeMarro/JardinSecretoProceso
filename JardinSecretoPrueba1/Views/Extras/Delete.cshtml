@model JardinSecretoPrueba1.Models.Extra

@{
    ViewData["Title"] = "Eliminar Extra";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-trash me-2"></i>Eliminar Extra</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver a Extras
            </a>
        </div>

        <div class="card-body">
            <h5>¿Estás seguro de eliminar este extra?</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">$@Model.PrecioExtra</dd>

                <dt class="col-sm-3">Producto</dt>
                <dd class="col-sm-9">@Model.IdProductoNavigation.Nombre</dd>
            </dl>

            <form asp-action="Delete" class="text-end">
                <input type="hidden" asp-for="ExtraId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash me-1"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fa-solid fa-arrow-left me-1"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
