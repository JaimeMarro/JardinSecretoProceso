@model JardinSecretoPrueba1.Models.Extra

@{
    ViewData["Title"] = "Editar Extra";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-pen me-2"></i>Editar Extra</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver a Extras
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="ExtraId" />

                <div class="mb-3">
                    <label asp-for="IdProducto" class="form-label">Producto</label>
                    <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                    <span asp-validation-for="IdProducto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PrecioExtra" class="form-label">Precio</label>
                    <input asp-for="PrecioExtra" class="form-control" />
                    <span asp-validation-for="PrecioExtra" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-floppy-disk me-1"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fa-solid fa-arrow-left me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}