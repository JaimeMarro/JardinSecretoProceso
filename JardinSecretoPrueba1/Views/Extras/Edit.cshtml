@model JardinSecretoPrueba1.Models.Extra

@{
    ViewData["Title"] = "Editar Extra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">
        <div class="admin-panel-header">
            <h2><i class="fas fa-pencil-alt me-3 text-brand-primary"></i>Editar Extra</h2>
            <a asp-action="Index" class="btn btn-outline-light"><i class="fas fa-arrow-left me-2"></i> Volver</a>
        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ExtraId" />

            <div class="row">
                <div class="col-md-6 mb-4">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-4">
                    <label asp-for="PrecioExtra" class="form-label">Precio Adicional</label>
                    <input asp-for="PrecioExtra" class="form-control" />
                    <span asp-validation-for="PrecioExtra" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="IdProducto" class="form-label">Producto al que pertenece</label>
                <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                <span asp-validation-for="IdProducto" class="text-danger small"></span>
            </div>

            <div class="admin-footer">
                <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i> Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>