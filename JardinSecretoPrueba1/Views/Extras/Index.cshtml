@model IEnumerable<JardinSecretoPrueba1.Models.Extra>

@{
    ViewData["Title"] = "Gestión de Extras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">

        <div class="admin-panel-header">
            <h2><i class="fas fa-plus-square me-3 text-brand-primary"></i>Gestión de Extras</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i> Nuevo Extra
            </a>
        </div>

        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Nombre del Extra</th>
                    <th>Producto Asociado</th>
                    <th>Precio Adicional</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@Html.DisplayFor(modelItem => item.Nombre)</strong></td>
                        <td>@Html.DisplayFor(modelItem => item.IdProductoNavigation.Nombre)</td>
                        <td>$@item.PrecioExtra.ToString("0.00")</td>
                        <td class="text-end action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.ExtraId" class="btn-edit" title="Editar">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ExtraId" class="btn-details" title="Detalles">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ExtraId" class="btn-delete" title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="admin-footer">
            <a asp-controller="Home" asp-action="Opciones" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i> Volver al Panel
            </a>
        </div>

    </div>
</div>