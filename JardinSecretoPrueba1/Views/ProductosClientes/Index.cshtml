@model IEnumerable<JardinSecretoPrueba1.Models.Producto>
@{
    ViewData["Title"] = "Menú Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var nombreUsuario = ViewBag.Nombre ?? "Invitado";
    var tipoPedido = ViewBag.TipoPedido ?? "No especificado";
}

<div class="container text-center my-5">
    <h1 class="display-4 fw-bold">Hola, <span class="text-brand-primary">@nombreUsuario</span>!</h1>
    <p class="lead text-white-50">Estás realizando un pedido para: <strong>@tipoPedido</strong></p>
    @if (ViewBag.TipoPedido == "Delivery")
    {
        <p class="text-white-50">Dirección de entrega: <strong>@ViewBag.Direccion</strong></p>
    }
    else if (!string.IsNullOrEmpty(ViewBag.HoraPedido))
    {
        <p class="text-white-50">Hora del pedido: <strong>@ViewBag.HoraPedido</strong></p>
    }
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <img src="@item.ImagenUrl" class="card-img-top" alt="@item.Nombre">
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">$@item.Precio</p>

                    <a href="#" data-id="@item.ProductoId"
                       class="btn btn-success w-100 btn-agregar-modal">
                        <i class="fa fa-cart-plus"></i> Agregar al carrito
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="modalOpcionesProducto" tabindex="-1" aria-labelledby="modalOpcionesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content dark-modal border-0 shadow-lg">
            <div class="modal-header">
                <h5 class="modal-title" id="modalOpcionesLabel">Personaliza tu producto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <h5 id="modalNombreProducto" class="text-center mb-3"></h5>
                <div class="mb-3">
                    <label class="form-label fw-bold">🍦 Sabor:</label>
                    <div id="opcionesSabor"><p class="text-white-50 small">Cargando sabores...</p></div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">🍫 Extras (máx. 2):</label>
                    <div id="opcionesExtras" class="form-control" style="height: 100px; overflow-y: auto;"><p class="text-white-50 small">Cargando extras...</p></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="btnAgregarAlCarrito" class="btn btn-success">Agregar al carrito</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/modalOpciones.js"></script>