@model JardinSecretoPrueba1.Models.Sabor

@{
    ViewData["Title"] = "Detalles del Sabor";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-flask me-2"></i>Detalles del Sabor</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver a Sabores
            </a>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Producto</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdProductoNavigation.Nombre)</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">$@Html.DisplayFor(model => model.PrecioSabor)</dd>
            </dl>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model?.SaborId" class="btn btn-primary btn-sm">
                    <i class="fa-solid fa-pen me-1"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fa-solid fa-arrow-left me-1"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
