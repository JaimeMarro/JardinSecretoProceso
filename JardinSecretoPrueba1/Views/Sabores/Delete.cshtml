@model JardinSecretoPrueba1.Models.Sabor

@{
    ViewData["Title"] = "Eliminar Sabor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="admin-panel">
        <div class="admin-panel-header">
            <h2><i class="fas fa-exclamation-triangle me-3 text-danger"></i>Confirmar Eliminación</h2>
        </div>

        <h4 class="text-danger mt-4">¿Estás seguro de que quieres eliminar este sabor?</h4>
        <p class="text-white-50">Esta acción no se puede deshacer.</p>

        <dl class="row mt-4 p-3 bg-dark rounded">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>
            <dt class="col-sm-3">Producto Asociado</dt>
            <dd class="col-sm-9">@Model.Producto.Nombre</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SaborId" />
            <div class="admin-footer">
                <a asp-action="Index" class="btn btn-outline-light me-2">Cancelar</a>
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-2"></i> Sí, Eliminar</button>
            </div>
        </form>
    </div>
</div>