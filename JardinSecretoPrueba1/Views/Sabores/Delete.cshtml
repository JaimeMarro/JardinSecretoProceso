@model JardinSecretoPrueba1.Models.Sabor

@{
    ViewData["Title"] = "Eliminar Sabor";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-trash me-2"></i>Eliminar Sabor</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver a Sabores
            </a>
        </div>

        <div class="card-body">
            <p class="text-warning"><i class="fa-solid fa-triangle-exclamation me-1"></i>¿Estás seguro de eliminar este sabor?</p>

            <dl class="row">
                <dt class="col-sm-3">Producto</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdProductoNavigation.Nombre)</dd>

                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">$@Html.DisplayFor(model => model.PrecioSabor)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="SaborId" />
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa-solid fa-trash me-1"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left me-1"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
