@{
    ViewData["Title"] = "Carrito";
}

<h1>🛒 Carrito</h1>

<!-- 👇 Añade esto -->
<span id="cliente-nombre" data-nombre="@ViewBag.Nombre" hidden></span>
<span id="cliente-pedido" data-tipo="@ViewBag.TipoPedido" hidden></span>
<!-- 👆 -->

<table id="tabla-carrito" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<h3>Total: $<span id="total">0.00</span></h3>

<div class="mt-3">
    <button id="vaciar" class="btn btn-danger">Vaciar carrito</button>
    <button id="enviar" class="btn btn-success">Enviar por WhatsApp</button>
</div>

@section Scripts {
    <script src="~/js/carrito.js"></script>
}
